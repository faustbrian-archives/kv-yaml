{
    "name": "@konceiver/kv-yaml",
    "version": "0.1.0",
    "description": "YAML Implementation of KeeVee Store.",
    "homepage": "https://github.com/konceiver/kv-yaml",
    "bugs": {
        "url": "https://github.com/konceiver/kv-yaml/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.konceiver/kv-yaml.git"
    },
    "license": "MIT",
    "author": "Brian Faust <brian@konceiver.dev>",
    "files": [
        "dist"
    ],
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "build": "yarn clean && tsc",
        "build:watch": "yarn build -w",
        "clean": "rimraf .coverage dist tmp",
        "format": "yarn lint && yarn prettier",
        "lint": "tslint -c tslint.json -p tslint-project.json 'src/**/*.ts' --fix",
        "prepublishOnly": "yarn build",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
        "test": "jest",
        "test:watch": "jest --watchAll"
    },
    "jest": {
        "bail": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/index.ts",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "<rootDir>/.coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "verbose": true
    },
    "dependencies": {
        "@konceiver/kv-file": "^1.0.0",
        "fs-extra": "^9.0.1",
        "js-yaml": "^3.14.1"
    },
    "devDependencies": {
        "@konceiver/kv-test-suite": "^1.0.0",
        "@sindresorhus/tsconfig": "^0.8.0",
        "@types/fs-extra": "^9.0.5",
        "@types/jest": "^26.0.19",
        "@types/js-yaml": "^3.12.5",
        "@types/node": "^14.14.13",
        "@types/prettier": "^2.1.5",
        "@types/rimraf": "^3.0.0",
        "@yarnpkg/pnpify": "^2.4.0",
        "codecov": "^3.8.1",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "tslint": "^5.20.1",
        "typescript": "^4.1.3",
        "typescript-language-server": "^0.4.0"
    }
}
